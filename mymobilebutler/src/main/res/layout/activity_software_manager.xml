<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.activity.softwareManager.SoftwareManagerActivity">

    <TextView
        style="@style/headLayout"
        android:text="我的软件"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/software_manager_user_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_select"
            android:layout_height="wrap_content"
            android:text="用户程序"/>
        <Button
            android:id="@+id/software_manager_memory_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_select"
            android:layout_height="wrap_content"
            android:text="系统程序"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/software_manager_memory_tv"
            android:text="内存可用："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/software_manager_SDK_tv"
            android:layout_marginLeft="10dp"
            android:text="SD卡可用："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ListView
        android:id="@+id/software_manager_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >

    </ListView>



</LinearLayout>
