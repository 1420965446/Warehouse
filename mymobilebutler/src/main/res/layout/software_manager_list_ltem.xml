<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/manager_lv_im"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#234567"
        />
    <LinearLayout
        android:id="@+id/manager_ll"
        android:layout_toRightOf="@id/manager_lv_im"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView

            android:id="@+id/manager_lv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="王者荣耀"/>
        <TextView
            android:id="@+id/manager_lv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机内存"/>

    </LinearLayout>

    <TextView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/manager_lv_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="占用空间"/>


</RelativeLayout>